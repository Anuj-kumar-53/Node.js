<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./CDN/link') %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Blog</title>
</head>
<body>
    <%- include('./CDN/nav') %>
    <div class="container mt-5">
        <form action="/blog" method="post" enctype="multipart/form-data">

            <div class=" mb-3">
                <label for="coverImage"  class="form-label">ChosseImage</label>
                <input type="file" id="coverImage" class="form-control" name="coverImage" aria-describedby="coverImage" >
            </div>
            <div class=" mb-3">
                <label for="title"  class="form-label">Title</label>
                <input type="text" id="title" class="form-control" name="title" aria-describedby="title" >
            </div>
            <div class=" mb-3">
                <label for="floatingTextarea" class="form-label">Body</label>
                <textarea class="form-control" placeholder="Leave a comment here" id="body" style="height: 100px"  name="body"></textarea>
              </div>
              <div>
                <button type="submit" class="btn btn-info">Submit</button>
              </div>
            
        </form>
    </div>

    <%- include('./CDN/script') %>
</body>
</html>