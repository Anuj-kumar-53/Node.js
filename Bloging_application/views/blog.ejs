<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./CDN/link') %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blogs</title>
</head>
<body>
    <%- include('./CDN/nav') %>
    <div class="container mt-5 ">
        <h1><%=blog.title  %></h1>
        <div class="text-center">

            <img  src="<%=blog.coverImgUrl %>" width="600px" >
        </div>
        <pre><%= blog.body %></pre>

    </div>

    <div class="container mt-5 ">
        <img src="<%= blog.createdBy.profileImg %>" width="50px">  <%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-5">
        <h3>Comments (<%= comments.length %>)</h3>

        <% if (locals.user) { %>
            <form action="/blog/comment/<%=blog._id %>" method="post" >
                <div class=" mb-3">
                    <input type="text" name="content" class="form-control" placeholder="Leave a comment">
                </div>
                  <div>
                    <button type="submit" class="btn btn-info">Submit</button>
                  </div>
            </form>

          
        <% } %>
        <div class="mt-5">
            <% comments.forEach(comment => { %>
                <div>
                    <img src="<%=comment.createdBy.profileImg %>" width="50px">  <%= comment.createdBy.fullName %>: <pre><%= comment.content %></pre>

                </div>
             
            <% }) %>
        </div>

    </div>


    <%- include('./CDN/script') %>
</body>
</html>